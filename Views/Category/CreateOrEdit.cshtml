@model ExpenseTracker.Models.Category

@{
    ViewData["PageTitle"] = Model.CategoryId == 0 ? "CreateOrEdit a new category" : "Edit category";
}
<hr />
<div class="row">
    <div class="col-md-8">
        <div class="widget p-5">
            <form asp-action="CreateOrEdit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" name="CategoryId" value="@Model.CategoryId"/>
                <div class="form-group">
                    <div class='e-btn-group custom-rbt-group'>
                        <input type="radio" id="type_expense" name="Type" value="Expense" checked="@Model.Type == Expense"/>
                        <label class="e-btn" for="type_expense">Expense</label>
                        <input type="radio" id="type_income" name="Type" value="Income"/>
                        <label class="e-btn" for="type_income">Income</label>
                    </div>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <ejs-textbox id="title" placeholder="Title" ejs-for="Title"></ejs-textbox>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <ejs-textbox id="icon" placeholder="Icon" ejs-for="Icon"></ejs-textbox>
                    <span asp-validation-for="Icon" class="text-danger"></span>
                </div>
                <div class="form-group d-flex flex-column">
                    <ejs-button id="submit" type="submit" cssClass="e-success" content="Add"></ejs-button>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-4">
        <div class="widget h-100 d-flex justify-content-center align-items-center">
            <i class="fa-solid fa-shapes fa-2xl"></i>
        </div>
    </div>
</div>

