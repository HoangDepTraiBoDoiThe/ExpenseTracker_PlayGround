@{
    ViewData["bIsDashBoard"] = true;

}

<div class="row mb-4">
    <div class="d-flex flex-row gap-5">
        <div class="col-md-4">
            <div class="d-flex flex-row widget summary income">
                <div class="p-5 justify-content-center flex-column">
                    <i class="fa-solid fa-dollar-sign fa-2xl"></i>
                </div>
                <div class="d-flex flex-column py-3 m-auto">
                    <span class="lead ">Income</span>
                    <h1 class="display-6 fw-bold">@ViewBag.TotalIncome</h1>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="d-flex flex-row widget summary expense">
                <div class="p-5 justify-content-center flex-column">
                    <i class="fa-solid fa-dollar-sign fa-2xl"></i>
                </div>
                <div class="d-flex flex-column py-3 m-auto">
                    <span class="lead">Expense</span>
                    <h1 class="display-6 fw-bold">@ViewBag.TotalExpense</h1>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="d-flex flex-row widget summary balance">
                <div class="p-5 justify-content-center flex-column">
                    <i class="fa-solid fa-dollar-sign fa-2xl"></i>
                </div>
                <div class="d-flex flex-column py-3 m-auto">
                    <span class="lead">Balance</span>
                    <h1 class="display-6 fw-bold">@ViewBag.Balance</h1>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row mb-4">
    <div class="col-md-4">
        <div class="widget chart">
            <div class="p-4">
                <h1>Title</h1>
            </div>
            <div>
                <ejs-accumulationchart id="donutChart" title="Expense chart">
                    <e-accumulationchart-tooltipsettings enable="true"></e-accumulationchart-tooltipsettings>
                    <e-accumulationchart-legendsettings visible="true">
                        <e-accumulationchart-titlestyle color="#fff" size="1rem"></e-accumulationchart-titlestyle>
                    </e-accumulationchart-legendsettings>
                    <e-accumulation-series-collection>
                        <e-accumulation-series dataSource="ViewBag.ExpenseChart" xName="categoryWithIcon" yName="amount"
                                               radius="100%" innerRadius="60%" legendShape="Circle">
                            <e-accumulationseries-datalabel name="formattedAmount" visible="true" position="Inside">
                            </e-accumulationseries-datalabel>
                        </e-accumulation-series>
                    </e-accumulation-series-collection>
                </ejs-accumulationchart>
            </div>
        </div>
    </div>
    <div class="col-md-8"></div>
</div>