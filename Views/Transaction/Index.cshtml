@model IEnumerable<ExpenseTracker.Models.Transaction>

@{
    ViewData["PageTitle"] = "Transaction";
    ViewData["PageActionText"] = "+ New transaction";
    ViewData["PageActionUrl"] = "/Transaction/CreateOrEdit";
}
<div class="row">
    <div class="col-md-8">
        <ejs-grid id="transactionTable" dataSource="@Model" allowPaging="true" allowSorting="true" gridLines="None">
            <e-grid-pagesettings pageSize="10"></e-grid-pagesettings>
            <e-grid-columns>
                <e-grid-column field="CategoryWithIcon" headerText="Category"></e-grid-column>
                <e-grid-column field="FormatedAmount" headerText="Amount"></e-grid-column>
                <e-grid-column template="#TransactionOptions" headerText="Options"></e-grid-column>
            </e-grid-columns>
        </ejs-grid>
    </div>
</div>

<script id="TransactionOptions" type="text/x-template">
    <div class="d-flex align-items-start">
        <a class="no-a-decoration btn btn-sm" href="/Transaction/CreateOrEdit/${TransactionId}">
            <i class="fa-solid fa-pencil"></i>
        </a>
        <form action="/Transaction/Delete/${TransactionId}" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-sm btn-link">
                <i class="fa-solid fa-trash" style="color: #ff3d3d;"></i>
            </button>
        </form>
    </div>
</script>

